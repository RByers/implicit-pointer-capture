{
  "manifest_version": 2,
  "name": "Implicit Pointer Capture",
  "description": "Make all pointers have implicit capture.",
  "version": "1.0",
  "author": "Scott Gonz√°lez",
  "browser_action": {
    "default_title": "Toggle implicit capture"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
